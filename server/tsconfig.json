{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        /* Backend-specific settings */
        "lib": [
            "ES2022"
        ],
        "types": [
            "node"
        ],
        /* CommonJS interop for existing .js files */
        "allowJs": true,
        "checkJs": false,
        /* Path Aliases */
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "../shared/*"
            ],
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "types/**/*.d.ts",
        "../shared/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "scripts"
    ]
}